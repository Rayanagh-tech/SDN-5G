{
    "name": "5g-network-slicing",
    "version": "1.0.0",
    "description": "5G Network Slicing with SDN - Mininet, Ryu, ELK Stack",
    "author": "SDN-5G Project Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/example/sdn-5g"
    },
    "components": {
        "controller": {
            "file": "controller.py",
            "framework": "Ryu",
            "protocol": "OpenFlow 1.3",
            "ports": {
                "openflow": 6653,
                "rest_api": 8080
            }
        },
        "topology": {
            "file": "topology.py",
            "framework": "Mininet",
            "switches": ["s1", "s2", "s3"],
            "hosts": ["urllc_h1", "embb_h1", "mmtc_h1", "server"]
        },
        "monitoring": {
            "elasticsearch": {
                "version": "8.11.0",
                "port": 9200
            },
            "logstash": {
                "version": "8.11.0",
                "http_port": 5044,
                "beats_port": 5045
            },
            "kibana": {
                "version": "8.11.0",
                "port": 5601
            }
        }
    },
    "slices": {
        "URLLC": {
            "description": "Ultra-Reliable Low-Latency Communication",
            "port": 5001,
            "dscp": 46,
            "sla": {
                "min_bandwidth_mbps": 5,
                "max_latency_ms": 5,
                "max_jitter_ms": 1,
                "max_packet_loss_pct": 0.001
            }
        },
        "eMBB": {
            "description": "Enhanced Mobile Broadband",
            "port": 5002,
            "dscp": 34,
            "sla": {
                "min_bandwidth_mbps": 50,
                "max_latency_ms": 20,
                "max_jitter_ms": 5,
                "max_packet_loss_pct": 1.0
            }
        },
        "mMTC": {
            "description": "Massive Machine Type Communication",
            "port": 5003,
            "dscp": 10,
            "sla": {
                "min_bandwidth_mbps": 1,
                "max_latency_ms": 100,
                "max_jitter_ms": 20,
                "max_packet_loss_pct": 1.0
            }
        }
    },
    "requirements": {
        "python": ">=3.8",
        "mininet": ">=2.3.0",
        "openvswitch": ">=2.13",
        "ryu": ">=4.34",
        "docker": ">=20.10",
        "docker-compose": ">=1.29"
    }
}
